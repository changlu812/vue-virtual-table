{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.lib.tsbuildinfo",
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": false,
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/lib/**/*.ts",
    "src/components/**/*.vue",
    "src/composables/**/*.ts",
    "src/types/**/*.ts",
    "src/utils/**/*.ts"
  ]
}
